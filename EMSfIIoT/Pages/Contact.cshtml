@page
@model EMSfIIoT.Pages.ContactModel
@inject IHtmlLocalizer<ContactModel> modelLocalizer

@using Microsoft.Extensions.Configuration
@inject IConfiguration configuration

@{
    ViewData["Title"] = localizer.Get("Contact");
}

<h2>@localizer.Get("Contact")</h2>
<div class="form-group container-fluid">
    <form method="post">
        <div class="form-group">
            <label asp-for="FirstName">@modelLocalizer["First Name"]</label>
            <input class="form-control" asp-for="FirstName">
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName">@modelLocalizer["Last Name"]</label>
            <input class="form-control" asp-for="LastName">
            <span asp-validation-for="LastName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">@modelLocalizer["Email Address"]</label>
            <input class="form-control" asp-for="Email">
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Message">@modelLocalizer["Message"]</label>
            <textarea class="form-control" asp-for="Message"></textarea>
            <span asp-validation-for="Message"></span>
        </div>
        <div class="g-recaptcha" data-size="invisible" data-sitekey="@configuration["reCAPTCHA:SiteKey"]"></div>
        <button class="btn btn-secondary">@localizer.Get("Submit")</button>
    </form>
</div>

@section Scripts{
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <partial name="_ValidationScriptsPartial" />
}

